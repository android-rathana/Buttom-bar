<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recent_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:layout_marginTop="3dp"
    android:padding="8dp"
    android:background="@color/recent_card_background_color"
    card_view:cardCornerRadius="2dp"
    card_view:contentPaddingTop="@dimen/word_card_view_top_margin"
    card_view:contentPaddingBottom="@dimen/word_card_view_bottom_margin"
    card_view:contentPaddingLeft="@dimen/word_card_view_left_margin"
    card_view:contentPaddingRight="@dimen/word_card_view_right_margin">

    <RelativeLayout
        android:id="@+id/parent_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/search_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="3dp"
            android:text="influence"
            android:textColor="@android:color/black"
            android:textSize="8pt" />

        <TextView
            android:id="@+id/part_of_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="influence"
            android:textSize="7pt"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/search_word"
            android:layout_toEndOf="@+id/search_word" />

        <ImageView
            android:id="@+id/btn_recent_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="5dp"
            android:gravity="right"
            android:src="@drawable/ic_favorite_border_light_thin_teal_24dp" />
            android:src="@drawable/ic_favorite_border_light_thin_teal_24dp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
