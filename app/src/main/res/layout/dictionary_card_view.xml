<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dic_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:layout_marginTop="3dp"
    android:padding="8dp"
    card_view:cardCornerRadius="2dp"
    card_view:contentPaddingTop="@dimen/word_card_view_top_margin"
    card_view:contentPaddingBottom="@dimen/word_card_view_bottom_margin"
    card_view:contentPaddingLeft="@dimen/word_card_view_left_margin"
    card_view:contentPaddingRight="@dimen/word_card_view_right_margin">

    <TextView
        android:id="@+id/search_word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="influence"
        android:textSize="8pt"
        android:textColor="@android:color/black"/>

</android.support.v7.widget.CardView>

